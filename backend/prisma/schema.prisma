// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication and ownership
model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String?   // Hashed password (optional for OAuth users)
  name                  String?
  emailVerified         Boolean   @default(false)
  emailVerificationToken String?  @unique
  resetPasswordToken    String?   @unique
  resetPasswordExpires  DateTime?

  // OAuth fields
  googleId              String?   @unique
  profilePicture        String?
  authProvider          String?   @default("email") // "email" or "google"

  // Admin/Role fields
  role                  String    @default("user") // "user" or "admin"
  lastSeenAt            DateTime  @default(now())

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Relations
  topics    Topic[]
  captures  Capture[]
  resources Resource[]
  groups    Group[]
  analyticsEvents AnalyticsEvent[]

  @@map("users")
  @@index([emailVerificationToken])
  @@index([resetPasswordToken])
  @@index([googleId])
}

// Topic model - user-created categories for organizing content
model Topic {
  id          String   @id @default(uuid())
  title       String
  description String?
  color       String?  @default("#3B82F6") // Hex color for UI display
  icon        String?  // Icon name or emoji
  bookmarked  Boolean  @default(false) // User bookmark flag
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  resources Resource[]
  groups    Group[]

  @@map("topics")
  @@index([userId])
  @@index([bookmarked])
}

// Capture model - content saved from extension or web app
model Capture {
  id          String    @id @default(uuid())
  type        String    // "text", "link", "note", "quote"
  title       String?
  content     String    // Main content (text, URL, etc.)
  source      String?   // Source URL or application
  summary     String?   // AI-generated summary
  tags        String[]  @default([]) // Array of tag strings
  metadata    Json?     // Flexible JSON for additional data
  embedding   String?   // Vector embedding for semantic search (stored as text)
  bookmarked  Boolean   @default(false) // User bookmark flag
  unread      Boolean   @default(true)  // Unread flag - true when first captured
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  resources Resource[]

  @@map("captures")
  @@index([userId])
  @@index([type])
  @@index([bookmarked])
  @@index([unread])
}

// Group model - organize resources within topics
model Group {
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#8B5CF6") // Hex color for group display
  order     Int      @default(0) // Order of groups within topic
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  resources Resource[]

  @@map("groups")
  @@index([topicId])
  @@index([userId])
  @@index([topicId, order])
}

// Resource model - items within topics, can link to captures
model Resource {
  id          String   @id @default(uuid())
  title       String
  description String?
  type        String   // "capture", "note", "external_link", "file"
  order       Int      @default(0) // For custom ordering within a topic
  bookmarked  Boolean  @default(false) // User bookmark flag
  unread      Boolean  @default(true)  // Unread flag - true when added to topic

  // Grouping fields
  groupId      String?  // Optional reference to Group
  group        Group?   @relation(fields: [groupId], references: [id], onDelete: SetNull)
  orderInGroup Int      @default(0) // Order within the group

  // Optional link to a capture
  captureId   String?
  capture     Capture? @relation(fields: [captureId], references: [id], onDelete: SetNull)

  // Custom content (for notes or external links)
  content     String?
  url         String?

  // File upload fields
  fileName     String?  // Original file name
  filePath     String?  // Server file path
  fileType     String?  // MIME type (e.g., "application/pdf", "image/png")
  fileSize     Int?     // File size in bytes

  topicId     String
  topic       Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("resources")
  @@index([topicId])
  @@index([userId])
  @@index([captureId])
  @@index([bookmarked])
  @@index([unread])
  @@index([groupId])
}

// Analytics Event model - tracks user activity and actions
model AnalyticsEvent {
  id          String   @id @default(uuid())
  userId      String
  eventType   String   // "capture_created", "topic_created", "search_performed", "login", etc.
  eventName   String   // Human-readable event name
  properties  Json?    // Additional event data (e.g., capture type, search query, etc.)
  source      String?  // "web_app", "extension", "api"
  sessionId   String?  // Optional session identifier
  ipAddress   String?  // User IP for security/analytics
  userAgent   String?  // Browser/device info
  createdAt   DateTime @default(now())

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("analytics_events")
  @@index([userId])
  @@index([eventType])
  @@index([createdAt])
  @@index([userId, createdAt])
}

// User Stats model - aggregated analytics for quick access
model UserStats {
  id                    String   @id @default(uuid())
  userId                String   @unique
  totalCaptures         Int      @default(0)
  totalTopics           Int      @default(0)
  totalResources        Int      @default(0)
  totalSearches         Int      @default(0)
  capturesByType        Json?    // {"text": 5, "link": 10, "note": 3}
  mostActiveDay         String?  // Day of week with most activity
  mostActiveHour        Int?     // Hour of day with most activity
  averageCapturesPerDay Float?   @default(0)
  lastActiveAt          DateTime @default(now())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("user_stats")
  @@index([userId])
}
