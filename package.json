{
  "name": "personal-context-hub",
  "version": "1.0.0",
  "description": "A dual-component system for capturing and organizing information with Chrome Extension and Web App",
  "private": true,
  "workspaces": [
    "backend",
    "web-app",
    "extension"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:web": "npm run dev --workspace=web-app",
    "dev:extension": "npm run dev --workspace=extension",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:web": "npm run build --workspace=web-app",
    "build:extension": "npm run build --workspace=extension",
    "prisma:migrate": "npm run prisma:migrate --workspace=backend",
    "prisma:studio": "npm run prisma:studio --workspace=backend"
  },
  "keywords": [
    "personal-knowledge-management",
    "chrome-extension",
    "web-app",
    "ai-summarization"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
